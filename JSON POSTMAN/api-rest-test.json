{
	"info": {
		"name": "LOTR API - MODO EXPERTO (Sin Errores)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Regiones",
			"item": [
				{ "name": "GET Listar todas", "request": { "method": "GET", "url": "http://localhost/api/regions" }},
				{ "name": "GET Ver Específica (ID 2)", "request": { "method": "GET", "url": "http://localhost/api/regions/2" }},
				{ "name": "POST Crear Nueva", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Tierras del Este\"}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/regions" }},
				{ "name": "PUT Actualizar (ID 5)", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\"name\": \"Rohan (Marca de los Jinetes)\"}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/regions/5" }},
				{ "name": "DELETE Eliminar (ID 4)", "request": { "method": "DELETE", "url": "http://localhost/api/regions/4" }}
			]
		},
		{
			"name": "2. Reinos",
			"item": [
				{ "name": "GET Listar todos", "request": { "method": "GET", "url": "http://localhost/api/realms" }},
				{ "name": "GET Detalle Completo (ID 2)", "request": { "method": "GET", "url": "http://localhost/api/realms/2" }},
				{ "name": "GET Héroes de un Reino (ID 2)", "request": { "method": "GET", "url": "http://localhost/api/realms/2/heroes" }},
				{ "name": "POST Crear Reino", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Nargothrond\", \"ruler\": \"Finrod\", \"alignment\": \"Bien\", \"region_id\": 6}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/realms" }},
				{ "name": "PUT Actualizar (ID 3)", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\"name\": \"Mordor\", \"ruler\": \"Sauron El Grande\", \"alignment\": \"Mal\", \"region_id\": 3}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/realms/3" }},
				{ "name": "DELETE Eliminar (ID 7)", "request": { "method": "DELETE", "url": "http://localhost/api/realms/7" }}
			]
		},
		{
			"name": "3. Héroes",
			"item": [
				{ "name": "GET Listar todos", "request": { "method": "GET", "url": "http://localhost/api/heroes" }},
				{ "name": "GET Detalle Héroe (ID 4 - Frodo)", "request": { "method": "GET", "url": "http://localhost/api/heroes/4" }},
				{ "name": "GET Listar Vivos", "request": { "method": "GET", "url": "http://localhost/api/heroes/alive" }},
				{ "name": "GET Sus Artefactos (ID 4)", "request": { "method": "GET", "url": "http://localhost/api/heroes/4/artifacts" }},
				{ "name": "POST Crear Héroe", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Faramir\", \"race\": \"Humano\", \"rank\": \"Capitán\", \"realm_id\": 2, \"alive\": true}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/heroes" }},
				{ "name": "PUT Actualizar (ID 5)", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\"name\": \"Boromir\", \"rank\": \"Héroe Caído\", \"alive\": false}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/heroes/5" }},
				{ "name": "DELETE Eliminar (ID 3)", "request": { "method": "DELETE", "url": "http://localhost/api/heroes/3" }}
			]
		},
		{
			"name": "4. Criaturas",
			"item": [
				{ "name": "GET Listar todas", "request": { "method": "GET", "url": "http://localhost/api/creatures" }},
				{ "name": "GET Detalle (ID 1)", "request": { "method": "GET", "url": "http://localhost/api/creatures/1" }},
				{ "name": "GET Peligrosas >= 8", "request": { "method": "GET", "url": "http://localhost/api/creatures/dangerous?level=8" }},
				{ "name": "POST Crear Criatura", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Nazgûl\", \"species\": \"Espectro\", \"threat_level\": 9, \"region_id\": 3}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/creatures" }},
				{ "name": "DELETE Eliminar (ID 6)", "request": { "method": "DELETE", "url": "http://localhost/api/creatures/6" }}
			]
		},
		{
			"name": "5. Artefactos",
			"item": [
				{ "name": "GET Listar todos", "request": { "method": "GET", "url": "http://localhost/api/artifacts" }},
				{ "name": "GET Detalle (ID 4)", "request": { "method": "GET", "url": "http://localhost/api/artifacts/4" }},
				{ "name": "GET Portadores (ID 4)", "request": { "method": "GET", "url": "http://localhost/api/artifacts/4/heroes" }},
				{ "name": "GET Top Poder > 90", "request": { "method": "GET", "url": "http://localhost/api/artifacts/top" }},
				{ "name": "POST Crear Artefacto", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Anglachel\", \"type\": \"Espada\", \"origin_realm_id\": 5, \"power_level\": 89}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/artifacts" }},
				{ "name": "DELETE Eliminar (ID 3)", "request": { "method": "DELETE", "url": "http://localhost/api/artifacts/3" }}
			]
		},
		{
			"name": "6. Gestión Inventario (N:N)",
			"item": [
				{ "name": "POST Asignar (Gimli porta Andúril)", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"hero_id\": 3, \"artifact_id\": 2}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/artifact-hero" }},
				{ "name": "DELETE Retirar (Frodo deja Anillo)", "request": { "method": "DELETE", "body": { "mode": "raw", "raw": "{\"hero_id\": 4, \"artifact_id\": 1}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/artifact-hero" }}
			]
		}
	]
}