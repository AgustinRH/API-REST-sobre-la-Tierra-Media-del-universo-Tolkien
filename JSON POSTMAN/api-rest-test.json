{
	"info": {
		"name": "LOTR API - Full Validation (All Endpoints)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Regiones",
			"item": [
				{ "name": "GET Listar todas", "request": { "method": "GET", "url": "http://localhost/api/regions" }},
				{ "name": "GET Ver una específica", "request": { "method": "GET", "url": "http://localhost/api/regions/1" }},
				{ "name": "POST Crear nueva", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Mordor\"}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/regions" }},
				{ "name": "PUT Actualizar", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\"name\": \"Mordor (Tierras Sombrías)\"}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/regions/1" }},
				{ "name": "DELETE Eliminar", "request": { "method": "DELETE", "url": "http://localhost/api/regions/1" }}
			]
		},
		{
			"name": "2. Reinos",
			"item": [
				{ "name": "GET Listar todos", "request": { "method": "GET", "url": "http://localhost/api/realms" }},
				{ "name": "GET Detalle (con Region, Heroes, Artifacts)", "request": { "method": "GET", "url": "http://localhost/api/realms/1" }},
				{ "name": "GET Listar Héroes del Reino (Extra)", "request": { "method": "GET", "url": "http://localhost/api/realms/1/heroes" }},
				{ "name": "POST Crear nuevo", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Gondor\", \"ruler\": \"Aragorn\", \"alignment\": \"Bien\", \"region_id\": 1}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/realms" }},
				{ "name": "PUT Actualizar", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\"name\": \"Gondor\", \"ruler\": \"Elessar\", \"alignment\": \"Bien\", \"region_id\": 1}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/realms/1" }},
				{ "name": "DELETE Eliminar", "request": { "method": "DELETE", "url": "http://localhost/api/realms/1" }}
			]
		},
		{
			"name": "3. Héroes",
			"item": [
				{ "name": "GET Listar todos", "request": { "method": "GET", "url": "http://localhost/api/heroes" }},
				{ "name": "GET Detalle (con Realm y Artifacts)", "request": { "method": "GET", "url": "http://localhost/api/heroes/1" }},
				{ "name": "GET Listar Vivos (Extra)", "request": { "method": "GET", "url": "http://localhost/api/heroes/alive" }},
				{ "name": "GET Listar sus Artefactos (Extra)", "request": { "method": "GET", "url": "http://localhost/api/heroes/1/artifacts" }},
				{ "name": "POST Crear nuevo", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Legolas\", \"race\": \"Elfo\", \"rank\": \"Príncipe\", \"realm_id\": 1, \"alive\": true}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/heroes" }},
				{ "name": "PUT Actualizar", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\"name\": \"Legolas\", \"rank\": \"Rey del Bosque\", \"alive\": true}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/heroes/1" }},
				{ "name": "DELETE Eliminar", "request": { "method": "DELETE", "url": "http://localhost/api/heroes/1" }}
			]
		},
		{
			"name": "4. Criaturas",
			"item": [
				{ "name": "GET Listar todas", "request": { "method": "GET", "url": "http://localhost/api/creatures" }},
				{ "name": "GET Detalle (con Region)", "request": { "method": "GET", "url": "http://localhost/api/creatures/1" }},
				{ "name": "GET Peligrosas level >= 8 (Extra)", "request": { "method": "GET", "url": "http://localhost/api/creatures/dangerous?level=8" }},
				{ "name": "POST Crear nueva", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Balrog\", \"species\": \"Maia\", \"threat_level\": 10, \"region_id\": 1}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/creatures" }},
				{ "name": "PUT Actualizar", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\"threat_level\": 11}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/creatures/1" }},
				{ "name": "DELETE Eliminar", "request": { "method": "DELETE", "url": "http://localhost/api/creatures/1" }}
			]
		},
		{
			"name": "5. Artefactos",
			"item": [
				{ "name": "GET Listar todos", "request": { "method": "GET", "url": "http://localhost/api/artifacts" }},
				{ "name": "GET Detalle (con Realm y Heroes)", "request": { "method": "GET", "url": "http://localhost/api/artifacts/1" }},
				{ "name": "GET Top Poder > 90 (Extra)", "request": { "method": "GET", "url": "http://localhost/api/artifacts/top" }},
				{ "name": "GET Listar sus Portadores (Extra)", "request": { "method": "GET", "url": "http://localhost/api/artifacts/1/heroes" }},
				{ "name": "POST Crear nuevo", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"name\": \"Anillo Único\", \"type\": \"Anillo\", \"origin_realm_id\": 1, \"power_level\": 100}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/artifacts" }},
				{ "name": "PUT Actualizar", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\"power_level\": 99}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/artifacts/1" }},
				{ "name": "DELETE Eliminar", "request": { "method": "DELETE", "url": "http://localhost/api/artifacts/1" }}
			]
		},
		{
			"name": "6. Gestión de Inventario (N:N)",
			"item": [
				{ "name": "POST Asignar Artefacto a Héroe", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\"hero_id\": 1, \"artifact_id\": 1}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/artifact-hero" }},
				{ "name": "DELETE Retirar Artefacto de Héroe", "request": { "method": "DELETE", "body": { "mode": "raw", "raw": "{\"hero_id\": 1, \"artifact_id\": 1}", "options": { "raw": { "language": "json" } } }, "url": "http://localhost/api/artifact-hero" }}
			]
		}
	]
}